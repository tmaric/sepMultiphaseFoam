L   |-DOMAIN_LENGTH-|;
H   |-DOMAIN_LENGTH-|;
D   #calc "|-DOMAIN_LENGTH-|/|-RESOLUTION-|";

vertices
(
    (0  0  0)
    ($L 0  0)
    ($L $H 0)
    (0  $H 0)
    (0  0  $D)
    ($L 0  $D)
    ($L $H $D)
    (0  $H $D)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (|-RESOLUTION-| |-RESOLUTION-| 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    rim
    {
        type patch;
        faces
        (
            (0 4 7 3)
            (1 2 6 5)
            (0 1 5 4)
            (2 3 7 6)
        );
    }
    front
    {
        type empty;
        faces
        (
            (4 5 6 7)
        );
    }
    back
    {
        type empty;
        faces
        (
            (0 3 2 1)
        );
    }
);

