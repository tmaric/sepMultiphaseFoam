FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
    <!--(if solver=="interFoam" or solver=="leiaLevelSetTwoPhaseFoam")-->
        nAlphaCorr      1;
        nAlphaSubCycles 2;
        cAlpha          1;
    <!--(elif solver=="interIsoFoam")-->
        isoFaceTol      1e-08;
        surfCellTol     1e-08;
        nAlphaBounds    3;
        snapTol         1e-12;
        clip            true;

        nAlphaSubCycles 2;
        cAlpha          1;
        nAlphaCorr      1;
        reconstructionScheme plicRDF; 
    <!--(elif solver=="interFlow-fP" or solver=="interFlow-RDF")-->
        // Entries taken from "TwoPhaseFlow/testsuite/surfaceTension/sinWave/system/fvSolution"
        advectionScheme isoAdvection;

	    reconstructionScheme plicRDF;

		vof2IsoTol      1e-8;
		surfCellTol     1e-8;
		writeVTK        false;


        isoFaceTol      1e-8;
        surfCellTol     1e-8;
        nAlphaBounds    3;
        snapTol         1e-12;
        clip            true;

        nAlphaSubCycles 2;
        nAlphaCorr      1;
        cAlpha          1;
        writeIsoFaces   false;
    <!--(end)-->
    }

    "pcorr.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-09;
        relTol          0;
    }

    p_rghFinal
    {
        $p_rgh;
    }

    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0;
    }

    UFinal
    {
        $U;
    }

    "psi|psiFinal"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0;
    }
}


levelSet
{
    implicitSurface 
    {
        type implicitSphere; 
        center (0.005 0.005 0.005); 
        radius 0.001;
    }


    profile
    {
        type signedDistance;
    }

    phaseIndicator
    {
        type geometric;
    }

    redistancer 
    {
        type noRedistancing;
    }

    surfaceTensionForce
    {
        //type traceGradGradPsiSnGradAlpha;
        type traceGradGeoNormalSnGradAlpha;
        alpha alpha.dispersed;

        //type constantCurvatureSurfaceTension;
        //curvature 1000; 
    }

    narrowBand	
    {
        type    signChange;
    }
}


PIMPLE
{
    momentumPredictor   yes;
    nOuterCorrectors    1;
    nCorrectors         3;
    nNonOrthogonalCorrectors 0;
}

